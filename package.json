{
  "name": "bald-theme",
  "version": "1.0.0",
  "description": "The Bald Theme is purpose-built for Headless WordPress. It is intended to be used in conjunction with a separate front-end application and does not contain any front-end assets.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MattOndo/bald-theme.git"
  },
  "keywords": [
    "headless",
    "rest",
    "api",
    "wordpress",
    "theme",
    "bald"
  ],
  "author": "Matt Ondo",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/MattOndo/bald-theme/issues"
  },
  "homepage": "https://github.com/MattOndo/bald-theme#readme",
  "scripts": {
    "dev:css": "yarn tailwindcss -i ./src/css/styles.css -o ./public/styles.css --postcss --watch",
    "build:css": "yarn tailwindcss -i ./src/css/styles.css -o ./public/styles.css --postcss",
    "minify:css": "yarn tailwindcss -i ./src/css/styles.css -o ./public/styles.css --postcss --minify"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.10",
    "autoprefixer": "^10.4.15",
    "postcss": "^8.4.18",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^14.0.0",
    "postcss-nested-ancestors": "^3.0.0",
    "tailwindcss": "^3.3.5"
  }
}
